---
import CollectionLayout from "@components/bookmarks/CollectionLayout.astro";
import { getEntries } from "@lib/contentParser";
import { sortByDate } from "@lib/sortFunctions";
import type { BookmarksEntry } from "@/types";
import { getIndex } from "@lib/contentParser";

const entryIndex = (await getIndex("bookmarks")) as BookmarksEntry;
const entries = (await getEntries("bookmarks", sortByDate)) as BookmarksEntry[];
---

<CollectionLayout entryIndex={entryIndex} entries={entries} />
